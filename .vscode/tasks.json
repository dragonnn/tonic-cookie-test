{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "$(chevron-right) Run",
            "type": "shell",
            "command": "export PATH=\"$HOME/.cargo/bin:$PATH\"; cargo run",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "color": "#00ff00"
                }
            }
        }
    ]
}